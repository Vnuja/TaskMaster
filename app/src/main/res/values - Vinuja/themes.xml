<resources>
    <!-- Default Theme (DayNight) -->
    <style name="Theme.TimeManagementApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Light Theme -->
    <style name="Theme.TimeManagementApp_Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:windowBackground">@color/colorBackground</item> <!-- Light Background -->
        <item name="colorSurface">@color/colorSurface</item> <!-- Light Surface -->
        <item name="colorOnSurface">@color/colorOnSurface</item> <!-- Dark text on surface -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.TimeManagementApp_Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="android:windowBackground">@color/dark_colorBackground</item> <!-- Dark Background -->
        <item name="colorSurface">@color/dark_colorSurface</item> <!-- Dark Surface -->
        <item name="colorOnSurface">@color/dark_colorOnSurface</item> <!-- Light text on surface -->
        <item name="colorError">@color/colorError</item>
        <item name="colorOnError">@color/colorOnError</item>
    </style>

    <!-- Circular buttons style -->
    <style name="Circular">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="progressBarStyleHorizontal" parent="@android:style/Widget.ProgressBar.Horizontal">
    </style>
</resources>
